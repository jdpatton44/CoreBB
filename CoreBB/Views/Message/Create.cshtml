@model CoreBB.Models.Message

@{
    ViewData["Title"] = "New Message";
}
<form asp-action="Create" method="post">
    <input type="hidden" asp-for="ToUserId" />
    <div class="container col-6 offset-3">
        <div class="card-header text-white bg-info">
            Sending Message to <a asp-controller="User" asp-action="Detail" asp-route-name="@Model.ToUser.Id">@Model.ToUser.Name</a>
        </div>
        <div class="card-body">
            <div class="form-group">
                <label asp-for="Title"></label>
                <input class="form-control" asp-for="Title" />
            </div>
            <div class="form-group">
                <label asp-for="Content"></label>
                <textarea asp-for="Content" style="min-height:120px" class="form-control"></textarea>
            </div>
        </div>
        <div class="card-footer">
            <input type="submit" class="btn-sm btn-success" value="Send" />
        </div>
    </div>
</form>
